extends home/layout_home
block main
  .container
      if (rows.length)
        table.table
          tr
            th DPI
            th NOMBRE
            th APELLIDO
            th EDAD
            th SEXO
            th E-MAIL
            th(colspan="2")
              form(method="GET" action="/agregar")
                input.button.add(type="submit", value="Agregar")
          each rows1 in rows
            tr
              td #{rows1.DPI_P}
              td #{rows1.NOMBRE_P}
              td #{rows1.APELLIDO_P}
              td #{rows1.EDAD_P}
              td #{rows1.SEXO_P}
              td #{rows1.EMAIL}
              td
                form(method="GET" action="/editar/#{rows1.DPI_P}")
                  input.button.edit(type="submit", value="Editar")
              td
                form(method="POST" action="/eliminar/#{rows1.DPI_P}")
                  input.button.delete(type="button", value="Eliminar")